---
layout: main.njk
title: Speakers
pagination:
  data: speakers
  size: 1
permalink: "speakers/{{speakers[pagination.items[0]].name | slug}}/index.html"
---

{% import 'macros/avatar.njk' as avatar %}

{% set speakerId = pagination.items[0] %}
{% set speaker = speakers[speakerId] %}

<div class="section speaker">
	<div class="cf ph2-ns">
		<div class="fl w100 w-25-ns pa2">
			{{ avatar.format(speaker, 250) }}
			<h2 class="speakerName mt4">{{ speaker.name }}</h2>

			{% if speaker.github %}
			<a href="https://github.com/{{ speaker.github }}" class="pa2"><i data-feather="github"></i></a>
			{% endif %}
			{% if speaker.twitter %}
			<a href="https://twitter.com/{{ speaker.twitter }}" class="pa2"><i data-feather="twitter"></i></a>
			{% endif %}
		</div>
		<div class="speaker-details fl w-100 w-75-ns pa2">
			{% for id, talk in talks %}
				{% for talkSpeakerId in talk.speakerIds %}
					{% if talkSpeakerId == speakerId %}
						<h2 class="speaker-talk-title">{{ talk.talkTitle }}</h2>
						<p class="speaker-talk-description">{{ talk.talkAbstract }}</p>
					{% endif %}
				{% endfor %}
			{% endfor %}
			{% if speaker.bio %}
				<hr />
				<h2>About</h2>
				<div class="speaker-bio">{{ speaker.bio }}</div>
			{% endif %}
		</div>
	</div>
</div>
