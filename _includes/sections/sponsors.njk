{% if conference.features.sponsors %}
<div class="section sponsors">
	<h2 class="black">{{ conference.name }} is proud to be sponsored by<h2>

	<div class="flex flex-wrap">
		{% for id, sponsor in sponsors %}
		<div class="w-100 w-50-l pa5 tc">
			<a href="{{ sponsor.link }}" target="_blank"><img src="{{ sponsor.logo }}" class="sponsorLogo" alt="{{sponsor.name}}"  /></a>
		</div>
		{% endfor %}
	</div>
</div>
{% endif %}
