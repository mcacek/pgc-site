---
layout: main.njk
title: Schedule
pagination:
  data: schedule
  alias: day
  size: 1
permalink: "schedule/{{pagination.items[0].label | slug}}/index.html"

---

<div class="section bg-white">
	<div class="tc pv4">
		{% for day in schedule %}
			{% set dayUrl = "/schedule/" + day.label | slug + "/" %}
			<a href="{{dayUrl}}" class=" ph2 {% if pagination.hrefs[pagination.pageNumber] == dayUrl %}active{% endif %}">{{day.label}}</a>
		{% endfor %}
	</div>
	<div>
		<div class="mb4">
			{% for scheduleBlock in day.scheduleBlocks %}
			<div class="flex flex-wrap">
				<div class="w-100 w-10-ns">
					<div class="schedule-block-time tr pr4 mt3">{{ scheduleBlock.time }}</div>
				</div>
				<div class="w-100 w-90-ns">
				{% if scheduleBlock.blocks %}
					<div class="flex flex-wrap">
					{% for scheduleBlock in scheduleBlock.blocks %}
						{% set talk = talks[scheduleBlock.talkId] %}
						{% set speaker = speakers[talk.speakerId] %}
						{% set room = rooms[scheduleBlock.roomId] %}
						<div class="w-100 w-33-ns">
							<div class="bg-blue ma1 pa3 h4">
								<div>{{ talk.talkTitle }}</div>
								<div>{{ speaker.name }}</div>
								<div>{{ room.label }}</div>
							</div>
						</div>
					{% endfor %}
					</div>
					{% else %}
						<div class="bg-green ma1 pa3 tc">
							{{ scheduleBlock.label }}
							{{ scheduleBlock.room }}
						</div>
					{% endif %}
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</div
